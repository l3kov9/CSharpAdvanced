<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DAI's Pizza</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("headerScripts", required: false)
</head>
<body>
    @{
        var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
        var actionName = this.ViewContext.RouteData.Values["action"].ToString();
    }
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">DAI's Pizza</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav mr-auto">
                @* TODO: Extract HTML helper for links with routes *@
                <li class="nav-item @(controllerName == "Home" && actionName == "Index" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        Home
                        <span class="sr-only">
                            (current)
                        </span>
                    </a>
                </li>
                <li class="nav-item @(controllerName == "Menu" && actionName == "Index" ? "active" : "")">
                    @Html.ActionLink("Menu", "Index", "Menu", null, new { @class = "nav-link" })
                </li>
            </ul>
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                @Html.Partial("_UserInfo")
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DAI's Pizza</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
