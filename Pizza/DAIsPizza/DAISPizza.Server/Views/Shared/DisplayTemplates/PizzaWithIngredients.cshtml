@model PizzaWithIngredients
<div class="col-sm-4" style="padding-bottom: 20px">
    <div class="card" style="height: 100%">
        <img class="card-img-top" src="@Model.PictureUrl" alt="@(Model.Name + " image")">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">
                <strong>Ingredients:</strong>
                @string.Join(
                    ", ",
                    Model.Ingredients
                        .Select(ingredient => ingredient.Name.ToLower())
                        .OrderBy(name => name))
            </p>
            @if (this.User != null)
            {
                <a href="@Url.Action("OrderPizza", "Orders", new { id = Model.Id })" class="btn btn-lg btn-success mt-auto align-self-center" style="width: 80%; display:inline-block">Order now</a>
            }
        </div>
    </div>
</div>